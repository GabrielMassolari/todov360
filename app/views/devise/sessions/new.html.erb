<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <form>
    <i class="fa-solid fa-user fa-6x mb-5" style="color: #FF700A;"></i>
    <h1 class="h3 mb-3 fw-normal">Login</h1>

    <div class="form-floating form-st">
      <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email", class: 'form-control input-t' } %>
    </div>
    <div class="form-floating form-st">
      <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password", class: 'form-control input-t' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= f.button :submit, "Login", class: 'w-75 btn btn-lg mt-5 button-login' %>
  </form>

<% end %>

<%= render "devise/shared/links" %>